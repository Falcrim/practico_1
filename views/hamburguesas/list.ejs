<%- include('../../components/header.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-12">

                <div class="card mt-3">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>Hamburguesas de <%= restaurante?.nombre %>
                            </h3>
                            <a class="btn btn-primary" href="/hamburguesas/<%= restaurante?.id %>/create">Agregar</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table ">
                                <thead class="table-dark">
                                    <tr>
                                        <th></th>
                                        <th>Nombre</th>
                                        <th>Descripcion</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% hamburguesas.forEach(hamburguesa=> { %>
                                        <tr>
                                            <td>
                                                <img src="/images/preview/<%= hamburguesa.id %>.jpg" alt="Foto preview"
                                                    class="profile-img" />
                                            </td>
                                            <td>
                                                <%= hamburguesa.nombre %>
                                            </td>
                                            <td>
                                                <%= hamburguesa.descripcion%>
                                            </td>
                                            <td><a class="btn btn-success"
                                                href="/hamburguesas/<%= hamburguesa.id %>/preview">Foto preview</a></td>
                                            <td><a class="btn btn-primary"
                                                    href="/hamburguesas/<%= hamburguesa.id %>/edit">Editar</a></td>
                                            <td>
                                                <form method="post" action="/hamburguesas/<%= hamburguesa.id %>/delete"
                                                    onsubmit="return confirm('EstÃ¡ seguro que desea eliminar?')">
                                                    <input class="btn btn-danger" type="submit" value="Eliminar">
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../components/footer.ejs') %>