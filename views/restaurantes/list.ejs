<%- include('../../components/header.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col-12">

                <div class="card mt-3">
                    <div class="card-body">
                        <div class="card-title">
                            <h3>Lista de Restaurantes</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table ">
                                <thead class="table-dark">
                                    <tr>
                                        <th></th>
                                        <!-- <th>Id</th> -->
                                        <th>Nombre</th>
                                        <th>Descripcion</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% restaurantes.forEach(restaurante=> { %>
                                        <tr>
                                            <td>
                                                <img src="/images/profile/<%= restaurante.id %>.jpg" alt="Foto de perfil"
                                                    class="profile-img" />
                                            </td>
                                            <!-- <td>
                                                <%= restaurante.id %>
                                            </td> -->
                                            <td>
                                                <%= restaurante.nombre %>
                                            </td>
                                            <td>
                                                <%= restaurante.descripcion %>
                                            </td>
                                            <td><a class="btn btn-success"
                                                href="/restaurantes/<%= restaurante.id %>/profile">Foto de perfil</a></td>
                                            <td><a class="btn btn-primary"
                                                    href="/restaurantes/<%= restaurante.id %>/edit">Editar</a></td>
                                            <td><a class="btn btn-primary"
                                                    href="/hamburguesas/<%= restaurante.id %>/list">hamburguesas</a></td>
                                            <td>
                                                <form method="post" action="/restaurantes/<%= restaurante.id %>/delete"
                                                    onsubmit="return confirm('EstÃ¡ seguro que desea eliminar?')">
                                                    <input class="btn btn-danger" type="submit" value="Eliminar">
                                                </form>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../components/footer.ejs') %>